;;; 

(defhydra hydra-mini ()
  "
MiniMe^^
---------------------------------
_d_ diary
_m_ memo
_w_ writeroom

_SPC_ cancel
"
  ("d" diary/new-or-open-org-file :exit t)
  ("m" diary/new-or-open-memo :exit t)
  ("w" writeroom-mode :exit t)
  ("SPC" nil)
  )

(global-set-key (kbd "C-x x") 'hydra-mini/body)







