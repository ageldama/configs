;;; eshell is our frien
(require 'f)

(defun eshell-here ()
  (interactive)
  (let ((eshell-buf (get-buffer "*eshell*"))
        (path (f-dirname (buffer-file-name))))
    (if (null eshell-buf)
        ;; just start new eshell
        (eshell)
      ;; else:
      (with-current-buffer eshell-buf
        (eshell/pushd (eshell/pwd))
        (cd path)
        (eshell-emit-prompt)))))

