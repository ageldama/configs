(defun counsel-rg-maybe-projectile ()
  (interactive)
  (cl-flet ((counsel-rg-thing-at-point ()
                                    (interactive)
                                    (let  ((tap (thing-at-point 'symbol)))
                                      (if (null tap)
                                          (counsel-rg)
                                        (counsel-rg tap)))))
    (let ((tap (thing-at-point 'symbol)))
      (if (projectile-project-p)
          (counsel-projectile-rg)
        (counsel-rg-thing-at-point)))))


