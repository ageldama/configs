

key "Super+KP_Subtract" amixer sset PCM 5%-
key "Super+KP_Add" amixer sset PCM 5%+
# "Multimedia key" bindings for XFree86. Gather the
# keycodes of your advanced function keys by watching the
# output of the xev command whilest pressing those keys
# and map those symbols by using xmodmap.
key "XF86AudioLowerVolume" amixer sset PCM 5%-
key "XF86AudioRaiseVolume" amixer sset PCM 5%+
key "XF86AudioMute" amixer sset PCM 0%
key "XF86HomePage" xdg-open about:blank
key "XF86Search" xdg-open https://www.google.com
key "XF86Eject" eject
# display and select monitor setup configurations
switchkey "Super+p" icewm-menu-xrandr




key "Super+Shift+z" icesh -f top sizeto 50% 100%

key "Super+Shift+x" icesh -f left sizeto 100% 50%

#key "Super+Shift+a" icesh -f left top sizeto 50% 50%

# resize: [+/- | v/h] by 20% of winsize
key "Super+Shift+Up" icesh -f sizeby 0% 15%
key "Super+Shift+Down" icesh -f sizeby 0% -15%
key "Super+Shift+Left" icesh -f sizeby -15% 0%
key "Super+Shift+Right" icesh -f sizeby 15% 0%


# TODO? resize: [v/h] [maximize/restore]

# move: wasd (corners), hjkl (by 15px)

key "Super+Shift+w" icesh -f top
key "Super+Shift+s" icesh -f bottom
key "Super+Shift+a" icesh -f left
key "Super+Shift+d" icesh -f right

key "Super+Shift+j" icesh -f moveby 0 15
key "Super+Shift+k" icesh -f moveby 0 -15
key "Super+Shift+h" icesh -f moveby -15 0
key "Super+Shift+l" icesh -f moveby 15 0


# launchers
key "Super+Return" x-terminal-emulator

key "Super+r" rofi -combi-modi drun,window,run -show combi

key "Super+Tab" rofi -show window
key "Super+Shift+Tab" rofi -show windowcd

key "Super+l" xscreensaver-command -lock

key "Super+Shift+p" gnome-screenshot -i

key "Super+e" sh -c 'thunar || pcmanfm'
key "Super+Shift+e" x-terminal-emulator -e mc

key "Super+Control+w" hsetroot-solid.pl
key "Super+Alt+w" wg.pl

key "Super+F9" scripts-rofi.sh

key "Super+Shift+F9" pavucontrol





